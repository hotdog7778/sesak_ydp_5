<!DOCTYPE html>
<html lang="ko">
  <%- include('include/include', { title: '회원 정보' })%>
  <body>
    <h1>회원 정보</h1>
    <!-- TODO: href 속성값 설정하기 -->
    <a href="/">HOME</a>
    <p>ID 수정 불가능, Password, Name 수정 가능</p>
    <!-- TODO: 각 input의 value 값을 로그인 한 사람의 정보로 채우기 -->
    <form name="form_profile">
      <label for="userid">ID</label>
      <input type="hidden" id="id" value="" />
      <!-- readonly: userid는 수정 불가능 (조건임) -->
      <input
        id="userid"
        type="text"
        name="userid"
        value="<%=
      userInfo.userid %>"
        readonly
      /><br />
      <label for="password">Password</label>
      <input
        id="password"
        type="password"
        name="pw"
        value="<%=
      userInfo.pw %>"
        required
      /><br />
      <label for="name">Name</label>
      <input
        id="name"
        type="text"
        name="name"
        value="<%= userInfo.name %>"
        required
      /><br />
      <button type="button" onclick="profileEdit();">Edit</button>
      <button type="button" onclick="profileDelete();">Delete</button>
    </form>

    <script>
      // TODO: [Login] 버튼 클릭시 서버에 회원 정보 수정 요청하기

      // POST /user/profile/edit

      function profileEdit() {
        const inputDataForm = document.forms['form_profile'];

        axios({
          method: 'post',
          url: '/user/profile/edit',
          data: {
            userid: inputDataForm.userid.value,
            password: inputDataForm.password.value,
            name: inputDataForm.name.value,
          },
        }).then((res) => {
          if (res.data.isUpdate) {
            alert(res.data.msg);
          }
        });
      }

      // TODO: [Login] 버튼 클릭시 서버에 회원 정보 삭제 요청하기
      // POST /user/profile/delete
      function profileDelete() {
        const userId = document.forms['form_profile'].userid.value;
        axios({
          method: 'delete',
          url: '/user/profile/delete',
          data: {
            userId,
          },
        }).then((res) => {
          if (res.data.isDelete) {
            alert(res.data.msg);
            document.location.href = '/user';
          }
        });
      }
    </script>
  </body>
</html>
